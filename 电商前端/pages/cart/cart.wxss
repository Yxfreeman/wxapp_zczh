/* pages/cart/cart.wxss */
page{display: flex;flex-direction: column }
.order-number{height: 71rpx;line-height: 71rpx;font-size:24rpx;color: #666666;padding-left: 25rpx;}
.brder-b{border-bottom: 2rpx #e3e3e3 solid}
.total{display:flex;flex-direction: column;}
.total image{width: 142rpx;height: 97rpx;margin: 0 auto}
.total .info{display: flex;flex-direction: row;height: 116rpx;line-height: 116rpx;justify-content: space-around;font-size: 34rpx;}
.total .info .font1{color: #999999}
.total .info .font2{font-size: 38rpx;color: #ffab18}
.btns{padding:18rpx 20rpx 23rpx;font-size:28rpx;display: flex;flex-direction: row;line-height: 66rpx;text-align: center}
.btns .del{width:156rpx;height: 64rpx;border: 2rpx #9e9e9e solid;border-radius: 4rpx;margin-right: 183rpx;}
.btns .make{width:190rpx;height: 68rpx;background-color:#9b9b9b;color:#ffffff;border-radius: 4rpx;margin-right:17rpx;}
.btns .pay{width:160rpx;height: 68rpx;background-color: #28d148;color:#ffffff;border-radius: 4rpx;}
.lists{background-color:#fafafa;padding-top: 22rpx}
.lists .item{background-color:#fff;padding: 30rpx 20rpx;margin-bottom:24rpx;border-bottom: 2rpx #f1f1f1 solid;display: flex;flex-direction: row;}
.lists .item .pic{width: 142rpx;height: 143rpx;margin-right: 20rpx;}
.lists .item .msg{display: flex;flex-direction: column;flex: 1;}
.lists .item .msg text{display: block;}
.lists .item .msg .name{font-size: 36rpx;line-height: 36rpx;margin-bottom: 16rpx;}
.lists .item .msg .txt{font-size: 24rpx;color:#999999;line-height: 24rpx;margin-bottom:10rpx;}
.lists .item .msg .price{color:#ffab18;font-size: 28rpx;}
.lists .item .toggle{display: flex;flex-direction: row;}
.lists .item .toggle .btn {padding-top:12rpx;padding-bottom: 15rpx;}
.lists .item .toggle .btn image{width: 47rpx;height: 47rpx;}
.lists .item .toggle .nums{width: 78rpx;height:45rpx;border: 2rpx #999999 solid;text-align: center;line-height: 45rpx;color: #999999;font-size: 24rpx; margin: 12rpx 9rpx 0;}
